<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        android:layout_centerHorizontal="true"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:backgroundTint="@color/black">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/p10"
                android:id="@+id/result_item_background"
                android:visibility="invisible"
                android:scaleType="center" />

<!--            android:layout_alignBottom="@+id/result_item_background"-->
<!--            android:layout_alignParentLeft="true"-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="-4dp"
                android:gravity="center"
                android:background="@drawable/rounded"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/magic"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:shadowDx="7"
                    android:shadowDy="9"
                    android:shadowRadius="8"
                    android:text="שם המלגה: "
                    android:textColor="#FFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/result_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/magic"
                    android:gravity="center"
                    android:shadowColor="#FF9100"
                    android:shadowRadius="1"
                    android:shadowDy="3"
                    android:shadowDx="2"
                    android:text="מלגת ידנית שהוכנסה "
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/magic"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:shadowDx="7"
                    android:shadowDy="9"
                    android:shadowRadius="8"
                    android:layout_marginTop="30dp"
                    android:text="אחוז התאמתך למלגה זו"
                    android:textColor="#FFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/result_item_percents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="92%"
                    android:fontFamily="@font/webfont"
                    android:textColor="@color/white"
                    android:shadowColor="#FF9100"
                    android:shadowRadius="40"
                    android:shadowDy="5"
                    android:shadowDx="5"
                    android:layout_marginTop="5dp"

                    android:textSize="26sp" />
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>